@model IEnumerable<TravelPacker.Models.TravelItem>

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Item Title</th>
                <th scope="col">ListTypeId</th>
                <th scope="col">Date Last Updated</th>
                <th scope="col">Created By</th>
                <th scope="col">Completed?</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.ItemTitle</td>
                        <td>@item.ListTypeId</td>
                        <td>@item.UpdatedDate</td>
                        <td>@item.UserName</td>
                            <td><input type="checkbox" asp-for="@item.IsCompleted" /></td>
                        <td><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                        <td><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    </tr>
            }
        </tbody>
    </table>
</div>

