@model IEnumerable<TravelPacker.Models.TravelItem>

<h1>List of Ideas</h1>

@foreach (var sub in Model)
{
    <div class="item">
    <span>Created By: @sub.UserName on @sub.CreatedDate.ToLocalTime()</span>
    @* <span>Last Updated: @sub.LastUpdated.ToLocalTime()</span> *@
    <div>
        @sub.ItemTitle
    </div>
    @if (User.Identity.IsAuthenticated && User.Claims.FirstOrDefault(c => c.Type ==
    System.Security.Claims.ClaimTypes.NameIdentifier).Value == @sub.UserId)
        {
            <a asp-action="Edit" asp-route-id="@sub.Id">edit</a>
            <a asp-action="Delete" asp-route-id="@sub.Id">delete</a>
        }
    </div>
}
<hr />
<a class="create" asp-action="Create">Add New Idea</a>